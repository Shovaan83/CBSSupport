@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In - CBS Support</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999">
        <div id="errorToast" class="toast" role="alert"><div class="toast-header bg-danger text-white"><strong class="me-auto">Login Failed</strong><button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button></div><div class="toast-body" id="errorToastBody"></div></div>
    </div>
    <div class="login-container">
        <div class="login-branding"><img src="~/images/logo-white.svg" alt="Info Brain Logo" class="branding-logo"><h1 class="branding-title">Balance CBS</h1><p class="branding-subtitle">Digital Core Banking System for modern financial institutions.</p></div>
        <div class="login-form-panel">
            <h2>Welcome Back</h2>
            <p class="text-muted mb-4">Please select your role and sign in.</p>
            <div class="role-selector" id="roleSelectorContainer"><div class="role-selector-slider"></div><div class="form-check"><input class="form-check-input" type="radio" name="roleType" id="adminRole" value="admin" checked><label class="form-check-label" for="adminRole">Admin</label></div><div class="form-check"><input class="form-check-input" type="radio" name="roleType" id="clientRole" value="client"><label class="form-check-label" for="clientRole">Client</label></div></div>

            <!-- Plain HTML form -->
            <form id="signInForm">
                <div class="mb-3"><label for="username" class="form-label">User name</label><input type="text" class="form-control" id="username" required /></div>
                <div class="mb-3"><label for="password" class="form-label">Password</label><input type="password" class="form-control" id="password" required /></div>
                <div class="form-group mb-3 disabled" id="branch-code-group"><label for="branchCode" class="form-label">Branch Code</label><input type="text" class="form-control" tabindex="-1" id="branchCode" /></div>
                <div class="d-flex justify-content-between align-items-center mb-4 small"><div class="form-check"><input type="checkbox" class="form-check-input" id="rememberMeCheckbox"><label class="form-check-label" for="rememberMeCheckbox">Remember me</label></div><a href="#" class="text-decoration-none">Forgot Password?</a></div>
                <div class="d-grid"><button type="submit" class="btn btn-login text-white">SIGN IN</button></div>
            </form>

            <p class="text-muted small mt-auto text-center">© @DateTime.Now.Year Info Brain Technologies Pvt. Ltd.</p>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.min.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>