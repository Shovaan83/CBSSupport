@model CBSSupport.Shared.Models.LoginViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In - CBS Support</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-branding">
            <img src="~/images/infobrain-logo.png" alt="Info Brain Logo" class="branding-logo">
            <h1 class="branding-title">Info Brain Techologies</h1>
            <p class="branding-subtitle">Yours Customer Support!</p>
        </div>
        <div class="login-form-panel">
            <h2>Welcome Back</h2>
            <p class="text-muted mb-4">Please select your role and sign in.</p>

            <form id="mainLoginForm" asp-controller="Login" asp-action="Index" method="post">

                <div class="role-selector" id="roleSelectorContainer">
                    <div class="role-selector-slider"></div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="roleType" id="adminRole" value="admin" checked>
                        <label class="form-check-label" for="adminRole">Admin</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="roleType" id="clientRole" value="client">
                        <label class="form-check-label" for="clientRole">Client</label>
                    </div>
                </div>

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- ADMIN FORM (Initially visible) -->
                <div id="adminForm">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <!-- CLIENT FORM (Initially hidden) -->
                <div id="clientForm" style="display: none;">
                    <div class="mb-3">
                        <label asp-for="ClientLogin.ClientCode" class="form-label"></label>
                        <input asp-for="ClientLogin.ClientCode" class="form-control" type="number" />
                        <span asp-validation-for="ClientLogin.ClientCode" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ClientLogin.Username" class="form-label"></label>
                        <input asp-for="ClientLogin.Username" class="form-control" />
                        <span asp-validation-for="ClientLogin.Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ClientLogin.Password" class="form-label"></label>
                        <input asp-for="ClientLogin.Password" class="form-control" type="password" />
                        <span asp-validation-for="ClientLogin.Password" class="text-danger"></span>
                    </div>
                </div>

                <!-- Common Fields -->
                <div class="d-flex justify-content-between align-items-center mb-4 small">
                    <div>
                        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <a href="#" class="text-decoration-none">Forgot Password?</a>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-login text-white">SIGN IN</button>
                </div>
            </form>
            <p class="text-muted small mt-auto text-center">© @DateTime.Now.Year Info Brain Technologies Pvt. Ltd.</p>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>                 