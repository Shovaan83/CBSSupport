@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Support Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Make sure this points to the correct combined CSS file -->
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
</head>
<body>

    <div class="dashboard-container">

        <!-- ===== GRID COLUMN 1 & 2: THE MDB CHAT COMPONENT ===== -->
        <div id="chat-component-container" class="dashboard-panel">
            <div class="card" id="chat-component-card">
                <div class="card-body">
                    <div class="row g-0 h-100">

                        <!-- Left Side: User List -->
                        <div class="col-md-5 user-list-section">
                            <div class="input-group rounded mb-3">
                                <input type="search" class="form-control rounded" placeholder="Search..." />
                                <span class="input-group-text border-0"><i class="fas fa-search"></i></span>
                            </div>
                            <div id="user-list-container">
                                <ul class="list-unstyled mb-0">
                                    <li class="p-2 border-bottom" data-conversation-id="conv-1">
                                        <a href="#!" class="d-flex justify-content-between text-decoration-none text-dark">
                                            <div class="d-flex flex-row">
                                                <div class="position-relative">
                                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp" alt="avatar" class="d-flex align-self-center me-3" width="60">
                                                    <span class="badge bg-success badge-dot"></span>
                                                </div>
                                                <div class="pt-1">
                                                    <p class="fw-bold mb-0">Marie Horwitz</p>
                                                    <p class="small text-muted">Hello, Are you there?</p>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Right Side: Chat Panel -->
                        <div class="col-md-7 chat-panel-section">
                            <div id="messagesList" class="pt-3 pe-3">
                                <div class="d-flex justify-content-center align-items-center h-100"><p class="text-muted">Select a conversation.</p></div>
                            </div>
                            <div class="text-muted d-flex justify-content-start align-items-center pe-3 pt-3 mt-auto border-top">
                                <img src="https://i.pravatar.cc/150?img=10" alt="avatar" class="rounded-circle me-3" style="width: 40px; height: 40px;">
                                <input type="text" class="form-control" id="message-input" placeholder="Type message" disabled>
                                <button class="btn btn-link ms-3" id="send-button" disabled><i class="fas fa-paper-plane"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- ===== GRID COLUMN 3: THE HISTORY PANELS ===== -->
        <div id="history-column">
            <!-- Top History Panel -->
            <div class="history-panel">
                <div class="panel-header">My Support Tickets</div>
                <div class="history-table-container panel-body">
                    <table class="table table-hover table-sm small">
                        <thead><tr><th>ID</th><th>Subject</th><th>Date</th><th>Status</th></tr></thead>
                        <tbody>
                            <tr><td>#84321</td><td>Login Issue</td><td>2024-10-21</td><td><span class="badge bg-success">Resolved</span></td></tr>
                            <tr><td>#84199</td><td>Invoice Question</td><td>2024-10-19</td><td><span class="badge bg-success">Resolved</span></td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Bottom History Panel -->
            <div class="history-panel">
                <div class="panel-header">My Inquiries</div>
                <div class="history-table-container panel-body">
                    <table class="table table-hover table-sm small">
                        <thead><tr><th>ID</th><th>Topic</th><th>Date</th><th>Outcome</th></tr></thead>
                        <tbody>
                            <tr><td>#INQ-345</td><td>Pricing for Enterprise Plan</td><td>2024-09-05</td><td><span class="badge bg-info">Info Sent</span></td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
</body>
</html>