
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
</head>
<body>

    <div class="admin-container">
        <aside class="admin-sidebar">
            <div class="sidebar-header"><i class="fas fa-shield-alt"></i> Admin Panel</div>
            <ul class="sidebar-nav">
                <li class="nav-item"><a class="nav-link active" data-page="dashboard"><i class="fas fa-fw fa-tachometer-alt"></i> Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" data-page="chats"><i class="fas fa-fw fa-comments"></i> Chats</a></li>
                <li class="nav-item"><a class="nav-link" data-page="ticket-management"><i class="fas fa-fw fa-ticket-alt"></i> Ticket Management</a></li>
                <li class="nav-item"><a class="nav-link" data-page="inquiry-management"><i class="fas fa-fw fa-question-circle"></i> Inquiry Management</a></li>
            </ul>

            <div class="sidebar-footer">
                <div class="user-info">
                    <i class="fas fa-user-circle"></i>
                    <span id="admin-username-display">Loading...</span>
                </div>
                <a href="#" id="logout-button" class="logout-link" title="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </aside>

        <main class="admin-content">

            <div id="dashboard-page" class="admin-page active">
                <div class="page-header">
                    <h1>Support Overview</h1>
                    <div class="d-flex align-items-center">
                        <label for="client-switcher-dashboard" class="form-label me-2 mb-0">Client:</label>
                        <select id="client-switcher-dashboard" class="form-select client-switcher" style="width: 250px;">
                            <option value="">All Clients</option>
                        </select>
                    </div>
                </div>

                <div class="page-content">
                    <div class="row g-4 mb-4">
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <div class="dashboard-card stat-card clickable-card" data-action="view-all-tickets">
                                <h6>All Tickets</h6>
                                <div class="stat-main">
                                    <h2 id="stat-total-tickets">0</h2>
                                    <i class="fas fa-ticket-alt"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <div class="dashboard-card stat-card clickable-card" data-action="view-all-inquiries">
                                <h6>All Inquiries</h6>
                                <div class="stat-main">
                                    <h2 id="stat-total-inquiries">0</h2>
                                    <i class="fas fa-question-circle"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <div class="dashboard-card stat-card clickable-card" data-action="view-solved-tickets">
                                <h6>Solved Tickets</h6>
                                <div class="stat-main">
                                    <h2 id="stat-resolved-tickets">0</h2>
                                    <i class="fas fa-check-circle"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <div class="dashboard-card stat-card clickable-card" data-action="view-solved-inquiries">
                                <h6>Solved Inquiries</h6>
                                <div class="stat-main">
                                    <h2 id="stat-solved-inquiries">0</h2>
                                    <i class="fas fa-check-square"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <div class="dashboard-card stat-card clickable-card" data-action="view-unsolved-tickets">
                                <h6>Unsolved Tickets</h6>
                                <div class="stat-main">
                                    <h2 id="stat-open-tickets">0</h2>
                                    <i class="far fa-comment-dots"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <div class="dashboard-card stat-card clickable-card" data-action="view-unsolved-inquiries">
                                <h6>Unsolved Inquiries</h6>
                                <div class="stat-main">
                                    <h2 id="stat-unsolved-inquiries">0</h2>
                                    <i class="far fa-question-circle"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-lg-8">
                            <div class="dashboard-card list-card">
                                <div class="list-card-header">
                                    <h6>Recent tickets</h6>
                                    <a href="#" id="view-all-tickets-link">View all <i class="fas fa-arrow-right"></i></a>
                                </div>
                                <div id="recent-tickets-list" class="list-card-body"></div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="dashboard-card chart-card">
                                <h6>Ticket priority</h6>
                                <div class="chart-container">
                                    <canvas id="ticketPriorityChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="chats-page" class="admin-page">
                <div class="page-header">
                    <h1>Live Conversations</h1>
                    <div class="d-flex align-items-center">
                        <label for="client-switcher-chats" class="form-label me-2 mb-0">Client:</label>
                        <select id="client-switcher-chats" class="form-select client-switcher" style="width: 250px;"></select>
                    </div>
                </div>

                <div class="chat-dashboard-container">

                    <div id="admin-conversation-list-panel" class="admin-chat-sidebar">
                        <div class="admin-chat-sidebar-header">
                            <h5 class="mb-0"><i class="fas fa-comments me-2"></i>Conversations</h5>
                            <button class="btn btn-sm btn-outline-primary" id="refresh-conversations-btn" title="Refresh">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                        </div>

                        <div class="admin-chat-panel-body" id="admin-conversation-list-container">

                            <div class="admin-chat-section">
                                <div class="admin-chat-section-header">
                                    <i class="fas fa-users me-2"></i>
                                    <span>Group Chat</span>
                                </div>
                                <div class="admin-chat-section-content" id="group-chats">

                                    <div class="admin-chat-loading">
                                        <div class="spinner-border spinner-border-sm me-2"></div>
                                        Loading group chat...
                                    </div>
                                </div>
                            </div>

                            <div class="admin-chat-section">
                                <div class="admin-chat-section-header">
                                    <i class="fas fa-user me-2"></i>
                                    <span>Private Chats</span>
                                    <div class="admin-chat-section-toggle" data-target="private-chats">
                                        <i class="fas fa-chevron-down"></i>
                                    </div>
                                </div>
                                <div class="admin-chat-section-content" id="private-chats">

                                    <div class="admin-chat-loading">
                                        <div class="spinner-border spinner-border-sm me-2"></div>
                                        Loading private chats...
                                    </div>
                                </div>
                            </div>

                            <div class="admin-chat-section">
                                <div class="admin-chat-section-header">
                                    <i class="fas fa-building me-2"></i>
                                    <span>Internal Chats</span>
                                    <div class="admin-chat-section-toggle" data-target="internal-chats">
                                        <i class="fas fa-chevron-down"></i>
                                    </div>
                                </div>
                                <div class="admin-chat-section-content" id="internal-chats">

                                    <div class="admin-chat-loading">
                                        <div class="spinner-border spinner-border-sm me-2"></div>
                                        Loading internal chats...
                                    </div>
                                </div>
                            </div>

                            <div class="admin-chat-section">
                                <div class="admin-chat-section-header">
                                    <i class="fas fa-ticket-alt me-2"></i>
                                    <span>Support Tickets</span>
                                    <div class="admin-chat-section-toggle" data-target="ticket-chats">
                                        <i class="fas fa-chevron-down"></i>
                                    </div>
                                </div>
                                <div class="admin-chat-section-content" id="ticket-chats">

                                    <div class="admin-chat-loading">
                                        <div class="spinner-border spinner-border-sm me-2"></div>
                                        Loading support tickets...
                                    </div>
                                </div>
                            </div>

                            <div class="admin-chat-section">
                                <div class="admin-chat-section-header">
                                    <i class="fas fa-question-circle me-2"></i>
                                    <span>Inquiries</span>
                                    <div class="admin-chat-section-toggle" data-target="inquiry-chats">
                                        <i class="fas fa-chevron-down"></i>
                                    </div>
                                </div>
                                <div class="admin-chat-section-content" id="inquiry-chats">

                                    <div class="admin-chat-loading">
                                        <div class="spinner-border spinner-border-sm me-2"></div>
                                        Loading inquiries...
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="admin-chat-main">
                        <div id="chat-header" class="admin-chat-main-header">
                            <div class="admin-chat-header-info">
                                <div class="admin-chat-title">Select a Conversation</div>
                                <div class="admin-chat-subtitle">Choose from the sidebar to start chatting</div>
                            </div>
                            <div class="admin-chat-header-actions">
                                <button class="btn btn-outline-secondary btn-sm" id="chat-info-btn" title="Chat Info" style="display: none;">
                                    <i class="fas fa-info-circle"></i>
                                </button>
                                <button class="btn btn-outline-secondary btn-sm" id="chat-settings-btn" title="Settings" style="display: none;">
                                    <i class="fas fa-cog"></i>
                                </button>
                            </div>
                        </div>

                        <div id="chat-panel-body" class="admin-chat-panel-body">
                            <div class="admin-chat-placeholder">
                                <div class="admin-chat-placeholder-content">
                                    <i class="fas fa-comments admin-chat-placeholder-icon"></i>
                                    <h3>Welcome to Admin Chat</h3>
                                    <p class="text-muted">Select a conversation from the sidebar to start chatting with clients and team members.</p>
                                    <div class="admin-chat-quick-actions">
                                        <button class="btn btn-outline-primary btn-sm me-2" onclick="$('[data-page=ticket-management]').click()">
                                            <i class="fas fa-ticket-alt me-1"></i>View All Tickets
                                        </button>
                                        <button class="btn btn-outline-secondary btn-sm" onclick="$('[data-page=inquiry-management]').click()">
                                            <i class="fas fa-question-circle me-1"></i>View All Inquiries
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="admin-chat-footer">
                            <div class="admin-typing-indicator" id="admin-typing-indicator" style="display: none;">
                                <span class="admin-typing-dots">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </span>
                                <span class="admin-typing-text">Someone is typing...</span>
                            </div>
                            <div class="admin-chat-input-container">
                                <div class="admin-chat-input-actions">
                                    <button class="btn btn-outline-secondary btn-sm" id="admin-attachment-button" title="Attach file" disabled>
                                        <i class="fas fa-paperclip"></i>
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm" id="admin-emoji-button" title="Add emoji" disabled>
                                        <i class="fas fa-smile"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control" placeholder="Type your message..." id="message-input" disabled />
                                <button class="btn btn-primary" type="button" id="send-button" disabled>
                                    <i class="fas fa-paper-plane"></i>
                                    <span class="d-none d-sm-inline ms-1">Send</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="ticket-management-page" class="admin-page">
                <div class="page-header">
                    <h1>All Support Tickets</h1>
                    <div class="d-flex align-items-center">
                        <label for="client-switcher-tickets" class="form-label me-2 mb-0">Client:</label>
                        <select id="client-switcher-tickets" class="form-select client-switcher" style="width: 250px;"></select>
                    </div>
                </div>
                <div class="page-content">
                    <div class="ticket-management-layout">
                        <div class="ticket-list-panel">
                            <div class="panel-body">
                                <table id="ticketsTable" class="table table-hover" style="width:100%">
                                    <thead></thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="ticket-detail-panel">
                            <div id="ticket-detail-content" style="display: none;">
                                <div class="ticket-detail-header">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <span id="detail-ticket-id">#TKT-12345</span>
                                            <h5 id="detail-ticket-subject">Training Request</h5>
                                        </div>
                                        <button type="button" id="btn-close-ticket-detail" class="btn btn-sm btn-outline-light" title="Close">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="ticket-properties">
                                    <div class="form-group">
                                        <label>Status</label>
                                        <select id="detail-ticket-status" class="form-select">
                                            <option value="Open">Open</option>
                                            <option value="Resolved">Resolved</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Priority</label>
                                        <select id="detail-ticket-priority" class="form-select" disabled>
                                            <option value="Low">Low</option>
                                            <option value="Normal">Normal</option>
                                            <option value="High">High</option>
                                            <option value="Urgent">Urgent</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Created By</label>
                                        <input type="text" id="detail-ticket-created-by" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label>Client</label>
                                        <input type="text" id="detail-ticket-client" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label>Date Created</label>
                                        <input type="text" id="detail-ticket-date" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea id="detail-ticket-description" class="form-control" rows="4" disabled></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>Resolved By</label>
                                        <input type="text" id="detail-ticket-resolved-by" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label>Resolved Date</label>
                                        <input type="text" id="detail-ticket-resolved-date" class="form-control" disabled />
                                    </div>
                                    <div class="ticket-actions">
                                        <button type="button" id="btn-update-ticket" class="btn btn-primary">
                                            <i class="fas fa-save"></i> Update Status
                                        </button>
                                        <button type="button" id="btn-start-ticket-chat" class="btn btn-success">
                                            <i class="fas fa-comments"></i> Open Chat
                                        </button>
                                    </div>
                                    <div class="inquiry-conversation-notice">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-comments me-2"></i>
                                            <span>Conversations for this ticket will open in a floating chat window.</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="ticket-detail-placeholder" class="d-flex align-items-center justify-content-center h-100">
                                <p class="text-muted">Select a ticket to view its details.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="inquiry-management-page" class="admin-page">
                <div class="page-header">
                    <h1>Inquiry Management</h1>
                    <div class="d-flex align-items-center gap-3">
                        <div class="d-flex align-items-center">
                            <label for="client-switcher-inquiries" class="form-label me-2 mb-0">Client:</label>
                            <select id="client-switcher-inquiries" class="form-select client-switcher" style="width: 200px;">
                                <option value="">All Clients</option>
                            </select>
                        </div>
                        <div class="d-flex align-items-center">
                            <label for="status-filter-inquiries" class="form-label me-2 mb-0">Status:</label>
                            <select id="status-filter-inquiries" class="form-select" style="width: 150px;">
                                <option value="">All Status</option>
                                <option value="Pending">Pending</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>

                        <div class="notification-container">
                            <button class="btn btn-outline-secondary notification-btn" id="admin-notification-btn-inquiries" title="Notifications">
                                <i class="fas fa-bell"></i>
                                <span class="notification-badge" id="admin-notification-badge-inquiries" style="display: none;">0</span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="page-content">
                    <div class="inquiry-management-layout">
                        <div class="inquiry-list-panel">
                            <div class="panel-body">
                                <table id="inquiriesDataTable" class="table table-hover" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Topic</th>
                                            <th>Inquired By</th>
                                            <th>Outcome</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="inquiry-detail-panel">
                            <div id="inquiry-detail-content" style="display: none;">
                                <div class="inquiry-detail-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span id="detail-inquiry-id">#INQ-68915</span>
                                            <div id="detail-inquiry-topic-container">
                                                <h5 id="detail-inquiry-topic">Account Inquiry</h5>
                                            </div>
                                        </div>
                                        <button type="button" id="btn-close-inquiry-detail" class="btn btn-sm btn-outline-secondary" title="Close">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="inquiry-properties">
                                    <div class="form-group">
                                        <label>Outcome</label>
                                        <select id="detail-inquiry-outcome" class="form-select">
                                            <option value="Pending">Pending</option>
                                            <option value="Completed">Completed</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Inquired By</label>
                                        <input type="text" id="detail-inquiry-inquired-by" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label>Date</label>
                                        <input type="text" id="detail-inquiry-date" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea id="detail-inquiry-description" class="form-control" rows="4" disabled></textarea>
                                    </div>
                                    <div class="inquiry-actions">
                                        <button type="button" id="btn-update-inquiry" class="btn btn-primary">
                                            <i class="fas fa-save"></i> Update Outcome
                                        </button>
                                        <button type="button" id="btn-start-inquiry-chat" class="btn btn-success">
                                            <i class="fas fa-comments"></i> Open Chat
                                        </button>
                                    </div>
                                </div>
                                <div class="inquiry-conversation-notice">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-comments me-2"></i>
                                        <span>Conversations for this inquiry will open in a floating chat window.</span>
                                    </div>
                                </div>
                            </div>
                            <div id="inquiry-detail-placeholder" class="d-flex align-items-center justify-content-center h-100">
                                <p class="text-muted">Select an inquiry to view its details.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        <div id="floating-chat-container"></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
</body>
</html>