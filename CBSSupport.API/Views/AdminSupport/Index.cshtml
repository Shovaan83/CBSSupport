@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
</head>
<body>

    <div class="admin-container">
        <aside class="admin-sidebar">
            <div class="sidebar-header"><i class="fas fa-shield-alt"></i> Admin Panel</div>
            <ul class="sidebar-nav">
                <li class="nav-item"><a class="nav-link active" data-page="dashboard"><i class="fas fa-fw fa-tachometer-alt"></i> Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" data-page="chats"><i class="fas fa-fw fa-comments"></i> Chats</a></li>
                <li class="nav-item"><a class="nav-link" data-page="ticket-management"><i class="fas fa-fw fa-ticket-alt"></i> Ticket Management</a></li>
                <li class="nav-item"><a class="nav-link" data-page="inquiry-management"><i class="fas fa-fw fa-question-circle"></i> Inquiry Management</a></li>
            </ul>

            <div class="sidebar-footer">
                <div class="user-info">
                    <i class="fas fa-user-circle"></i>
                    <span id="admin-username-display">Loading...</span>
                </div>
                <a href="#" id="logout-button" class="logout-link" title="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </aside>

        <main class="admin-content">

            <!-- PAGE 1: DASHBOARD -->
            <div id="dashboard-page" class="admin-page active">
                <div class="page-header">
                    <h1>Support Overview</h1>
                    <div class="d-flex align-items-center">
                        <label for="client-switcher-dashboard" class="form-label me-2 mb-0">Client:</label>
                        <select id="client-switcher-dashboard" class="form-select client-switcher" style="width: 250px;">
                            <option value="">All Clients</option>
                        </select>
                    </div>
                </div>

                <div class="page-content">
                    <div class="row g-4 mb-4">
                        <div class="col-lg-3 col-md-6"><div class="dashboard-card stat-card"><h6>All tickets</h6><div class="stat-main"><h2 id="stat-total-tickets">0</h2><i class="fas fa-ticket-alt"></i></div></div></div>
                        <div class="col-lg-3 col-md-6"><div class="dashboard-card stat-card"><h6>Open Tickets</h6><div class="stat-main"><h2 id="stat-open-tickets">0</h2><i class="far fa-comment-dots"></i></div></div></div>
                        <div class="col-lg-3 col-md-6"><div class="dashboard-card stat-card"><h6>Resolved Tickets</h6><div class="stat-main"><h2 id="stat-resolved-tickets">0</h2><i class="fas fa-check-circle"></i></div></div></div>
                        <div class="col-lg-3 col-md-6"><div class="dashboard-card stat-card"><h6>Total Inquiries</h6><div class="stat-main"><h2 id="stat-total-inquiries">0</h2><i class="fas fa-question-circle"></i></div></div></div>
                    </div>

                    <div class="row g-4">
                        <!-- Column for the Recent Tickets List -->
                        <div class="col-lg-8">
                            <div class="dashboard-card list-card">
                                <div class="list-card-header">
                                    <h6>Recent tickets</h6>
                                    <a href="#" id="view-all-tickets-link">View all <i class="fas fa-arrow-right"></i></a>
                                </div>
                                <!-- The new, detailed list will be rendered here by JavaScript -->
                                <div id="recent-tickets-list" class="list-card-body"></div>
                            </div>
                        </div>
                        <!-- Column for the Ticket Priority Chart -->
                        <div class="col-lg-4">
                            <div class="dashboard-card chart-card">
                                <h6>Ticket priority</h6>
                                <div class="chart-container">
                                    <!-- This canvas is where Chart.js will draw the doughnut chart -->
                                    <canvas id="ticketPriorityChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- PAGE 2: CHATS -->
            <div id="chats-page" class="admin-page">
                <div class="page-header">
                    <h1>Live Conversations</h1>
                    <div class="d-flex align-items-center">
                        <label for="client-switcher-chats" class="form-label me-2 mb-0">Client:</label>
                        <select id="client-switcher-chats" class="form-select client-switcher" style="width: 250px;"></select>
                    </div>
                </div>

                <div class="chat-container-full">
                    <div class="chat-sidebar">
                        <div class="chat-sidebar-header">
                            <h5 class="mb-0">Conversations</h5>
                        </div>
                        <div class="panel-body" id="conversation-list-container">
                        </div>
                    </div>

                    <div class="chat-main">
                        <div id="chat-header" class="chat-main-header">
                        </div>

                        <div id="chat-panel-body">
                            <div class="placeholder-view">
                                <i class="fas fa-comments placeholder-icon"></i>
                                <h3>Select a Conversation</h3>
                                <p class="text-muted">Choose a conversation from the list to start chatting.</p>
                            </div>
                        </div>

                        <div class="chat-footer">
                            <input type="text" class="form-control" placeholder="Type a message..." id="message-input" disabled />
                            <button class="btn btn-primary" type="button" id="send-button" disabled><i class="fas fa-paper-plane"></i></button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- PAGE 3: TICKET MANAGEMENT -->
            <div id="ticket-management-page" class="admin-page">
                <div class="page-header">
                    <h1>All Support Tickets</h1>
                    <div class="d-flex align-items-center">
                        <label for="client-switcher-tickets" class="form-label me-2 mb-0">Client:</label>
                        <select id="client-switcher-tickets" class="form-select client-switcher" style="width: 250px;"></select>
                    </div>
                </div>
                <div class="page-content">
                    <div class="ticket-management-layout">
                        <div class="ticket-list-panel">
                            <div class="panel-body">
                                <table id="ticketsTable" class="table table-hover" style="width:100%">
                                    <thead></thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="ticket-detail-panel">
                            <div id="ticket-detail-content" style="display: none;">
                                <div class="ticket-detail-header"><span id="detail-ticket-id">#...</span><div id="detail-ticket-subject-container"></div></div>
                                <div class="ticket-properties">
                                    <div class="form-group"><label>Status</label><div id="detail-ticket-status-badge" class="mt-1"></div></div>
                                    <div class="form-group"><label>Priority</label><select id="detail-priority" class="form-select"></select></div>
                                    <div class="form-group"><label>Assignee</label><select id="detail-assignee" class="form-select"></select></div>
                                    <div class="form-group"><label>Created By</label><input type="text" id="detail-createdby" class="form-control" disabled /></div>
                                </div>
                            </div>
                            <div id="ticket-detail-placeholder" class="d-flex align-items-center justify-content-center h-100">
                                <p class="text-muted">Select a ticket to view its details.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- PAGE 4: INQUIRY MANAGEMENT -->
            <div id="inquiry-management-page" class="admin-page">
                <div class="page-header">
                    <h1>Inquiry Management</h1>
                    <div class="d-flex align-items-center">
                        <select id="client-switcher-inquiries" class="form-select client-switcher">
                            <option value="">All Inquiries</option>
                        </select>
                    </div>
                </div>
                <div class="page-content">
                    <div class="inquiry-management-layout">
                        <div class="inquiry-list-panel">
                            <div class="panel-body">
                                <table id="inquiriesDataTable" class="table table-hover" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Topic</th>
                                            <th>Inquired By</th>
                                            <th>Outcome</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="inquiry-detail-panel">
                            <div id="inquiry-detail-content" style="display: none;">
                                <div class="inquiry-detail-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span id="detail-inquiry-id">#INQ-68915</span>
                                            <div id="detail-inquiry-topic-container">
                                                <h5 id="detail-inquiry-topic">Account Inquiry</h5>
                                            </div>
                                        </div>
                                        <button type="button" id="btn-close-inquiry-detail" class="btn btn-sm btn-outline-secondary" title="Close">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="inquiry-properties">
                                    <div class="form-group">
                                        <label>Outcome</label>
                                        <select id="detail-inquiry-outcome" class="form-select">
                                            <option value="Pending">Pending</option>
                                            <option value="In Progress">In Progress</option>
                                            <option value="Completed">Completed</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Inquired By</label>
                                        <input type="text" id="detail-inquiry-inquired-by" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label>Priority</label>
                                        <span id="detail-inquiry-priority-badge" class="badge badge-priority-normal">Normal</span>
                                    </div>
                                    <div class="form-group">
                                        <label>Date</label>
                                        <input type="text" id="detail-inquiry-date" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea id="detail-inquiry-description" class="form-control" rows="4" disabled></textarea>
                                    </div>
                                    <div class="inquiry-actions">
                                        <button type="button" id="btn-update-inquiry" class="btn btn-primary">
                                            <i class="fas fa-save"></i> Update Outcome
                                        </button>
                                        <button type="button" id="btn-start-inquiry-chat" class="btn btn-success">
                                            <i class="fas fa-comments"></i> Open Chat
                                        </button>
                                    </div>
                                </div>
                                <div class="inquiry-conversation-notice">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-comments me-2"></i>
                                        <span>Conversations for this inquiry will open in a floating chat window.</span>
                                    </div>
                                </div>
                            </div>
                            <div id="inquiry-detail-placeholder" class="d-flex align-items-center justify-content-center h-100">
                                <p class="text-muted">Select an inquiry to view its details.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- FLOATING CHAT UI CONTAINER -->
        <div id="floating-chat-container"></div>
    </div>

    <!-- SCRIPTS -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
</body>
</html>