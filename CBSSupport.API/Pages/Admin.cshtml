@page
@model CBSSupport.API.Pages.AdminModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Support Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div class="admin-layout">
        <!-- ===== SIDEBAR ===== -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-headset fa-2x"></i>
                <span class="fs-4">Support</span>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="#" data-view="dashboard">
                        <i class="fas fa-th-large fa-fw me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-view="tickets">
                        <i class="fas fa-ticket-alt fa-fw me-2"></i> All Tickets
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/chat" target="_blank">
                        <i class="fas fa-comments fa-fw me-2"></i> Live Chat
                    </a>
                </li>
                <li class="nav-item mt-auto">
                    <a class="nav-link" href="#">
                        <i class="fas fa-sign-out-alt fa-fw me-2"></i> Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- ===== MAIN CONTENT ===== -->
        <main class="main-content">
            <header class="main-header">
                <h3>Dashboard</h3>
                <div class="header-actions">
                    <button class="btn btn-success"><i class="fas fa-plus me-1"></i> New Ticket</button>
                    <div class="user-profile">
                        <img src="https://i.pravatar.cc/40?u=admin" alt="User Avatar" />
                        <span>Inverness McKenzie</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </header>

            <!-- This is where the different views will be loaded by JavaScript -->
            <div class="content-body">
                <!-- Dashboard View -->
                <div id="view-dashboard" class="view-container">
                    <!-- Stats Cards -->
                    <div class="row">
                        <div class="col-md-3"><div class="stat-card"><div class="stat-icon bg-primary"><i class="fas fa-ticket-alt"></i></div><div class="stat-info"><span class="stat-title">Total Tickets</span><span class="stat-value" id="stat-total-tickets">0</span></div></div></div>
                        <div class="col-md-3"><div class="stat-card"><div class="stat-icon bg-success"><i class="fas fa-plus-circle"></i></div><div class="stat-info"><span class="stat-title">New Tickets</span><span class="stat-value" id="stat-new-tickets">0</span></div></div></div>
                        <div class="col-md-3"><div class="stat-card"><div class="stat-icon bg-info"><i class="fas fa-hourglass-half"></i></div><div class="stat-info"><span class="stat-title">Open Tickets</span><span class="stat-value" id="stat-open-tickets">0</span></div></div></div>
                        <div class="col-md-3"><div class="stat-card"><div class="stat-icon bg-danger"><i class="fas fa-check-circle"></i></div><div class="stat-info"><span class="stat-title">Closed Tickets</span><span class="stat-value" id="stat-closed-tickets">0</span></div></div></div>
                    </div>
                    <!-- Charts -->
                    <div class="row mt-4">
                        <div class="col-md-12"><div class="card"><div class="card-header">Solved Tickets Trend</div><div class="card-body"><canvas id="solvedTicketsChart"></canvas></div></div></div>
                    </div>
                </div>

                <!-- Tickets List View -->
                <div id="view-tickets" class="view-container" style="display:none;">
                    <div class="card">
                        <div class="card-header">All Support Tickets</div>
                        <div class="card-body">
                            <table id="ticketsDataTable" class="table table-hover" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Subject</th>
                                        <th>Requester</th>
                                        <th>Date Created</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                        <th>Agent</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
</body>
</html>