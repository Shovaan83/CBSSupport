@page
@model CBSSupport.API.Pages.AdminModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>

    <div class="admin-container">
        <!-- ===== ADMIN SIDEBAR ===== -->
        <aside class="admin-sidebar">
            <div class="sidebar-header"><i class="fas fa-shield-alt"></i> Admin Panel</div>
            <ul class="sidebar-nav">
                <li class="nav-item"><a class="nav-link active" data-page="dashboard"><i class="fas fa-fw fa-tachometer-alt"></i> Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" data-page="chats"><i class="fas fa-fw fa-comments"></i> Chats</a></li>
                <li class="nav-item"><a class="nav-link" data-page="ticket-management"><i class="fas fa-fw fa-ticket-alt"></i> Ticket Management</a></li>
                <li class="nav-item"><a class="nav-link" data-page="inquiry-management"><i class="fas fa-fw fa-question-circle"></i> Inquiry Management</a></li>
            </ul>
        </aside>

        <!-- ===== MAIN CONTENT AREA ===== -->
        <main class="admin-content">

            <!-- ===== NOTIFICATION FEATURE START ===== -->
            <div class="notification-area">
                <button id="notification-bell" class="notification-bell-btn" aria-label="Toggle Notifications">
                    <i class="far fa-bell"></i>
                    <span id="notification-badge" class="notification-badge"></span>
                </button>
                <div id="notification-dropdown" class="notification-dropdown">
                    <div class="notification-header">
                        <h3>Notifications</h3>
                        <div class="notification-actions">
                            <i class="fas fa-cog"></i>
                        </div>
                    </div>
                    <div class="notification-tabs">
                        <button class="notification-tab-btn active" data-filter="all">All <span class="tab-count" id="notif-count-all">0</span></button>
                        <button class="notification-tab-btn" data-filter="unread">Unread</button>
                    </div>
                    <div id="notification-list" class="notification-list">
                        <div class="notification-placeholder">
                            <p>No new notifications.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ===== NOTIFICATION FEATURE END ===== -->
            <!-- PAGE 1: DASHBOARD -->
            <div id="dashboard-page" class="admin-page active">
                <div class="page-header">
                    <h1>Support Overview</h1>
                </div>
                <div class="page-content">
                    <div class="row g-4">
                        <div class="col-lg-3 col-md-6"><div class="dashboard-card stat-card"><h6>All tickets</h6><div class="stat-main"><h2 id="stat-total-tickets">0</h2><i class="fas fa-users-cog"></i></div></div></div>
                        <div class="col-lg-3 col-md-6"><div class="dashboard-card stat-card"><h6>Client replies</h6><div class="stat-main"><h2 id="stat-client-replies">112</h2><i class="fas fa-ticket-alt"></i></div></div></div>
                        <div class="col-lg-3 col-md-6"><div class="dashboard-card stat-card"><h6>Staff replies</h6><div class="stat-main"><h2 id="stat-staff-replies">1,678</h2><i class="far fa-comment-dots"></i></div></div></div>
                        <div class="col-lg-3 col-md-6"><div class="dashboard-card stat-card"><h6>Tickets without reply</h6><div class="stat-main"><h2 id="stat-no-reply">0</h2><i class="fas fa-sync-alt"></i></div></div></div>
                        <div class="col-lg-8"><div class="dashboard-card chart-card"><h6>Ticket reply time</h6><div class="chart-container"><canvas id="ticketReplyTimeChart"></canvas></div></div></div>
                        <div class="col-lg-4"><div class="dashboard-card chart-card"><h6>Ticket priority</h6><div class="chart-container"><canvas id="ticketPriorityChart"></canvas></div></div></div>
                        <div class="col-lg-8"><div class="dashboard-card chart-card"><h6>Average tickets created</h6><div class="chart-container"><canvas id="averageTicketsChart"></canvas></div></div></div>
                        <div class="col-lg-4">
                            <div class="dashboard-card list-card">
                                <div class="list-card-header"><h6>Recent tickets</h6><a href="#" id="view-all-tickets-link">View all <i class="fas fa-arrow-right"></i></a></div>
                                <div id="recent-tickets-list" class="list-card-body"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- PAGE 2: CHATS -->
            <div id="chats-page" class="admin-page">
                <div class="dashboard-container">
                    <div id="conversation-list-panel" class="dashboard-panel">
                        <div class="panel-header"><span>Live Conversations</span></div>
                        <div class="panel-search">
                            <i class="fas fa-search"></i>
                            <input type="text" id="conversation-search" placeholder="Search conversations...">
                        </div>
                        <div class="panel-body" id="conversation-list-container"></div>
                    </div>
                    <div id="chat-panel" class="dashboard-panel">
                        <div class="panel-header" id="chat-header"></div>
                        <div id="chat-panel-body" class="panel-body"></div>
                        <div class="chat-footer">
                            <div id="file-preview-container" class="file-preview-container"></div>
                            <div class="chat-input-container">
                                <input type="file" id="file-input" style="display: none;" />
                                <div class="chat-input-actions">
                                    <button class="btn btn-icon" id="attachment-button" aria-label="Attach file"><i class="fas fa-paperclip"></i></button>
                                </div>
                                <input type="text" class="form-control" placeholder="Type a message..." id="message-input">
                                <button class="btn btn-primary" type="button" id="send-button" aria-label="Send Message"><i class="fas fa-paper-plane"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- PAGE 3: TICKET MANAGEMENT -->
            <div id="ticket-management-page" class="admin-page">
                <div class="page-header">
                    <h1>All Support Tickets</h1>
                    <div class="d-flex gap-2">
                        <select id="filter-status" class="form-select"><option value="">All Statuses</option></select>
                        <select id="filter-priority" class="form-select"><option value="">All Priorities</option></select>
                        <select id="filter-agent" class="form-select"><option value="">All Agents</option></select>
                    </div>
                </div>
                <div class="page-content">
                    <div class="ticket-management-layout">
                        <div class="ticket-list-panel"><div class="panel-body"><table id="ticketsTable" class="table table-hover" style="width:100%"><thead><tr><th>ID</th><th>Subject</th><th>Created By</th><th>Assigned To</th><th>Status</th><th>Priority</th><th>Last Update</th><th>Actions</th></tr></thead><tbody></tbody></table></div></div>
                        <div class="ticket-detail-panel">
                            <div id="ticket-detail-content" style="display: none;">
                                <div class="ticket-detail-header"><span id="detail-ticket-id">#...</span><span id="detail-ticket-subject"></span></div>
                                <div class="ticket-properties">
                                    <div class="form-group"><label>Status</label><select id="detail-status" class="form-select"></select></div>
                                    <div class="form-group"><label>Priority</label><select id="detail-priority" class="form-select"></select></div>
                                    <div class="form-group"><label>Assignee</label><select id="detail-assignee" class="form-select"></select></div>
                                    <div class="form-group"><label>Created By</label><input type="text" id="detail-createdby" class="form-control" disabled /></div>
                                </div>
                                <div class="p-4 text-center text-muted d-flex flex-column align-items-center justify-content-center h-100">
                                    <i class="fas fa-comments fa-2x mb-2"></i>
                                    <p>Ticket conversations now open in floating chat windows.</p>
                                    <p class="small">Click the "Chat" button on a ticket to start.</p>
                                </div>
                            </div>
                            <div id="ticket-detail-placeholder" class="d-flex align-items-center justify-content-center h-100"><p class="text-muted">Select a ticket to view its details.</p></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- PAGE 4: INQUIRY MANAGEMENT -->
            <div id="inquiry-management-page" class="admin-page">
                <div class="page-header">
                    <h1>Inquiry Management</h1>
                    <div class="d-flex gap-2">
                        <select id="inquiry-status-filter" class="form-select" style="width: auto;">
                            <option value="">All Inquiries</option>
                            <option value="Pending">Pending</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                </div>
                <div class="page-content">
                    <div class="ticket-list-panel">
                        <div class="panel-body">
                            <table id="inquiriesDataTable" class="table table-hover" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Topic</th>
                                        <th>Inquired By</th>
                                        <th>Date</th>
                                        <th>Outcome</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ===== WHATSAPP-STYLE NOTIFICATION POPUP START ===== -->
            <div id="toast-notification-popup" class="toast-notification-popup">
                <div class="toast-header">
                    <strong>New Message</strong>
                    <div class="toast-actions">
                        <button class="btn-close" id="toast-close-btn"></button>
                    </div>
                </div>
                <div class="toast-body">
                    <div class="toast-avatar">
                        <div id="toast-avatar-initials" class="avatar-initials"></div>
                    </div>
                    <div class="toast-content">
                        <div id="toast-sender-name" class="toast-sender"></div>
                        <div id="toast-message" class="toast-message"></div>
                    </div>
                </div>
                <div class="toast-footer">
                    <input type="text" id="toast-reply-input" placeholder="Type a reply...">
                    <button id="toast-send-btn" class="btn-send"><i class="fas fa-paper-plane"></i></button>
                </div>
            </div>
            <!-- ===== WHATSAPP-STYLE NOTIFICATION POPUP END ===== -->

        </main>

        <!-- FLOATING CHAT CONTAINER -->
        <div id="floating-chat-container"></div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>

</body>
</html>